<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.NFCFZLLE.eventmanagement.Peugeot_profile_activity">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="190dp"
        android:id="@+id/first"
        android:background="@color/white">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="150dp"
            android:layout_gravity="center"
            android:layout_height="150dp"
            android:src="@drawable/peugeot_logo" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="190dp"
            android:scaleType="fitXY"
            android:src="@drawable/eventri_pattern" />

    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#002355"
        android:orientation="vertical"
        android:id="@+id/linearLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/first"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:weightSum="1">


        <Button
            android:id="@+id/checkin"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_marginTop="34dp"
            android:background="@color/white"
            android:drawableTop="@drawable/nfc"
            android:paddingTop="25dp"
            android:layout_marginBottom="34dp"
            android:textColor="#e1e1e1"
            android:text="CHECK IN GUEST"
            android:src="@drawable/nfc"
            android:layout_below="@+id/first"
            android:layout_centerHorizontal="true"
            android:layout_weight="0.87" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#e1e1e1"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignBottom="@+id/button3"
                android:layout_alignLeft="@+id/button3"
                android:layout_alignStart="@+id/button3"
                android:layout_marginRight="30dp"
                android:background="#e1e1e1"
                android:layout_gravity="right"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/eventri_logo" />


            <Button
                android:id="@+id/logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:background="@color/white"
                android:text="LOG OUT"
                android:textColor="#8f8f8f" />
        </LinearLayout>

    </LinearLayout>


</RelativeLayout>
